doctype html
head
  title Educational registration form
  link(rel='icon', sizes='16x16 32x32 48x48 64x64', href='favicon_io/favicon.ico')
  link(rel='stylesheet' href='https://use.fontawesome.com/releases/v5.4.1/css/all.css' integrity='sha384-5sAR7xN1Nv6T6+dT2mhtzEpVJvfS3NScPQTrOxhwjIuvcA67KV2R5Jz6kr4abQsz' crossorigin='anonymous')
  link(href='https://fonts.googleapis.com/css?family=Roboto:300,400,500,700' rel='stylesheet')
  link(rel='stylesheet' href='css/header.css')
  link(rel='stylesheet' href='css/footer.css')
  link(rel='stylesheet' href='css/data_fillup.css')
header
  nav
    ul
      .button_box_1
        a(href='/') HOME
      .button_box_1
        a(href='content') CONTENT
      .button_box_1
        a(href='contact_us') CONTACT US
      .button_box_1
        a(href='about_us') ABOUT US
      .button_box_1
        a(href='search') SEARCH
    .logo
      .headerText_1
        img(src='images/logo-home.png' alt='')
      .headerText_2
        span  STUDENT TRACKING SYSTEM
    ul
      .button_box_2
        a(href='signup') SIGN UP
      .button_box_3
        a(href='login') LOGIN
    .dropdown
      img.dropbtn(src='images/avatar.png' alt='Avatar' onclick='myFunction()')
      #myDropdown.dropdown-content
        a(href='data_fillup') Data Fillup
        a(href='logout') Logout
main
  .main-block
    form(action='/submit1' method='post')
      .submission
        h1=message 
      .left-part
        i.fas.fa-graduation-cap
        h1 Student Details
      .title
        i.fas.fa-pencil-alt
        h2 Insert Student
      .info
        input#name(type='text' name='name' placeholder='Full name' required='')
        input#fathername(type='text' name='fathername' placeholder='Father name' required='')
        input#mothername(type='text' name='mothername' placeholder='Mother name' required='')
        select#gender(name='gender' required='')
          option(value='') Gender
          option(value='male') Male
          option(value='female') Female
          option(value='other') Other
        input#dob(placeholder='Date of Birth' type='text' onfocus="(this.type='date') " name='dob' required='')
        input#email(type='text' name='email' placeholder='Email' required='')
        input#phone(type='text' name='phone' placeholder='Phone number' required='')
        .left-part
          h1 Residential Details
        input#address(type='text' name='address' placeholder='Address' required='')
        input#state(type='text' name='state' placeholder='State' required='')
        input#city(type='text' name='city' placeholder='City' required='')
        input#pincode(type='number' name='pincode' placeholder='Pin Code' required='')
        .left-part
          h1 Educational Details
        input.institute-name(type='text' name='instituteid' placeholder='Institute Name' required='')
        input.branch(type='text' name='branch' placeholder='Branch' required='')
        input.current-year(type='text' name='currentyear' placeholder='Current Year' required='')
        input(type='text' name='lastexam' placeholder='Last Exam Name' required='')
        input(type='text' name='examresult' placeholder='Result (Percentage/CGPA)' required='')
        .left-part
          h1 Student Financial And Training Details
        input(type='text' name='currenttrainings' placeholder='Current Training (if any)')
        input(type='text' name='currentinternship' placeholder='Current Internship (if any)')
        input(type='text' name='currentfellowship' placeholder='Current Fellowship (if any)')
        input(type='text' name='currentgrants' placeholder='Current Grants (if any)')
        input(type='number' name='annualincome' placeholder="Parents' annual income (for grants)")
      button(type='submit') Submit
